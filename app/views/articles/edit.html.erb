<div class="contents row">

    <%= form_tag("/articles/#{@article.id}", method: :patch ) do %>
      <h3>
        編集する
      </h3>
      <input placeholder="title" type="text" name="title" value="<%= @article.title %>" autofocus="true">
      <textarea cols="30" name="content" placeholder="content" rows="10"><%= @article.content %></textarea>
      <input type="submit" value="SENT">
    <% end %>
  </div>